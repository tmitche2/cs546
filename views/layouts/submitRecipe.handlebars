<div class="otherforms">
            <form method="POST" action="/addDrink">
                <p>Fill out the form below to submit a recipe.</p>
                Drink Name:<br>
                <input type="text" name="drinkName" placeholder="Moscow Mule">
                <br>
                
                Flavor: <br>
                <input type="text" name="flavor" placeholder="Sweet">
                <br>
                Alcohol Type:<br>
                <input type="text" name="alcoholTypes" placeholder="Vodka">
                <br>
                Other Ingredients:<br>
                <input type="text" name="ingredients" placeholder="Ginger Beer, Lime Juice, Ice">
                <br>
                Tools:<br>
                <input type="text" name="tools" placeholder="Spoon">
                <br>
                Glass Type:<br>
                <input type="text" name="glass" placeholder="Copper Mug">
                <br>
                Preparation:<br>
                <textarea rows="4" cols="25" name="prep" form="recipeform">
                </textarea>
                <br> Strength: <br>
                <select class="input-field">
                    <option value="" disabled selected>Select</option>
                    <option value="Weak">Weak</option>
                    <option value="Medium">Medium</option>
                    <option value="Strong">Strong</option>
                </select>
                <br> Difficulty: <br>
                <select class="input-field">
                    <option value="" disabled selected>Select</option>
                    <option value="very-easy">Very Easy</option>
                    <option value="easy">Easy</option>
                    <option value="medium">Medium</option>
                    <option value="Hard">Hard</option>
                </select>
                </br>
                <button type="submit">Submit</button>
                
            </form>
        </div>
